<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.palmdev.german_books.presentation.screens.reading.ReadBookFragment">

    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="12dp"
        android:layout_height="70dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            app:tint="@color/gold"
            app:srcCompat="@drawable/baseline_arrow_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvSavedWordsCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="4dp"
            tools:text="20"
            android:fontFamily="@font/nunito_medium"
            app:fontFamily="@font/nunito_medium"
            android:textColor="@color/gold"
            android:textSize="22sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnWords"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingVertical="14dp"
            android:layout_marginEnd="24dp"
            android:adjustViewBounds="true"
            app:tint="@color/gold"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_cards" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnTranslate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingVertical="12dp"
            android:paddingEnd="24dp"
            android:adjustViewBounds="true"
            app:tint="@color/gold"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_translate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            android:paddingEnd="8dp"
            android:adjustViewBounds="true"
            app:tint="@color/gold"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_baseline_settings" />
    </LinearLayout>

    <TextView
        android:id="@+id/bookContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"

        android:lineSpacingExtra="4dp"
        android:textColor="@color/textColorWhite"
        android:textIsSelectable="true"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"
        app:fontFamily="@font/poppins_regular"
        tools:text="@string/loremIpsum" />


    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPageBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            app:tint="@color/gold"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/currentPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gold"
            android:fontFamily="@font/poppins_regular"
            app:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck"
            tools:text="0 / 32" />

        <ImageButton
            android:id="@+id/btnPageNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tint="@color/gold"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
</LinearLayout>