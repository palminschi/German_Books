<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".presentation.screens.videos.video_player.VideoPlayerFragment">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/video"
        app:enableAutomaticInitialization="false" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/videoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="@string/loremIpsum" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvViewsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/views"
                            android:textColor="@color/gray_accent"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/centerPoint"
                            android:textColor="@color/gray_accent"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLikesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/likes"
                            android:textColor="@color/gray_accent"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_subtitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white_transparent"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icBtnTranslator"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/picture"
                            app:srcCompat="@drawable/ic_subtitles"
                            app:tint="@color/white" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="@color/white_transparent"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="UseCompoundDrawables">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/icBtnSave"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/picture"
                                app:srcCompat="@drawable/ic_plus"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/tvBtnSave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="16dp"
                                android:text="@string/save"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOriginalSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="center|bottom"
                    android:maxLines="4"
                    android:textColor="@color/white"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:lines="3"
                    tools:text="@string/loremIpsum" />

                <ProgressBar
                    android:id="@+id/subtitlesProgress"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvTranslatedSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|top"
                    android:maxLines="3"
                    android:textColor="@color/gray_accent"
                    android:textSize="16sp"
                    tools:lines="2"
                    tools:text="@string/loremIpsum" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnTranslate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white_transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/picture"
                        app:srcCompat="@drawable/ic_translate"
                        app:tint="@color/white" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/btnVideoBack"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:clickable="true"
                            android:contentDescription="@string/picture"
                            android:focusable="true"
                            app:srcCompat="@drawable/ic_video_back"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:fontFamily="@font/nexa_text_extra_bold"
                            tools:ignore="HardcodedText" />
                    </FrameLayout>

                    <ToggleButton
                        android:id="@+id/toggleBtnPlay"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="30dp"
                        android:background="@drawable/ic_toggle_play_pause"
                        android:backgroundTint="@color/white"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/btnVideoForward"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:clickable="true"
                            android:contentDescription="@string/picture"
                            android:focusable="true"
                            app:srcCompat="@drawable/ic_video_forward"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:fontFamily="@font/nexa_text_extra_bold"
                            tools:ignore="HardcodedText" />
                    </FrameLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:text="@string/recommended"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.palmdev.german_books.presentation.custom_view.NonScrollListView
                android:id="@+id/listRecommendedVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="12dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="6dp"
                android:listSelector="@android:color/transparent"
                tools:layout_height="300dp"
                tools:listitem="@layout/item_video_dark" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>