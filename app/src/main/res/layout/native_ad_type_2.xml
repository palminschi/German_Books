<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeAdView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/background_second"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/icon_container"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginStart="7dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/ispeak_app_icon"
                    android:contentDescription="@null" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_container"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/iSpeakAppTitle" />

            <RatingBar
                android:layout_marginTop="4dp"
                android:id="@+id/ad_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/lila"
                android:progressTint="@color/lila"
                android:layout_marginStart="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                app:layout_constraintStart_toEndOf="@id/icon_container"
                app:layout_constraintTop_toBottomOf="@id/ad_headline" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFree"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/icon_container"
                app:layout_constraintTop_toBottomOf="@id/ad_stars">

                <TextView
                    android:id="@+id/tvFree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/green_2"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/free"
                    android:textColor="@color/green_dark"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/install"
                    android:textColor="@color/main_orange"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_arrow_orange" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>