<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="@color/gradient_violet_1"
                android:endColor="@color/gradient_violet_2"
                android:angle="270"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="@color/gradient_violet_1"
                android:endColor="@color/gradient_violet_1"
                android:angle="270"/>
        </shape>
    </item>
</selector>