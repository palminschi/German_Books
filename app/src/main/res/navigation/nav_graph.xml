        tools:layout="@layout/fragment_videos" />
    <fragment
        android:id="@+id/savedVideoFragment"
        android:name="com.palmdev.german_books.presentation.screens.videos.saved_videos.SavedVideoFragment"
        android:label="SavedVideoFragment" />

    <dialog
        android:id="@+id/videosLimitDialogFragment"
        android:name="com.palmdev.german_books.presentation.screens.dialogs.VideosLimitDialogFragment"
        android:label="VideosLimitDialogFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.palmdev.german_books.presentation.screens.settings.SettingsFragment"
